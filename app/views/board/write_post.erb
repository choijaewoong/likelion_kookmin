<div class="container">
  <div class="content_section">
    <div class="title_box">
        <h2 class="wow fadeInDown">
            Board
        </h2>
        <a class="btn btn-default write_button wow fadeIn" href="/board/list" role="button">
          <i class="fa fa-arrow-left fa-lg"></i> back
        </a>
    </div>
    <form action="/board/write_post" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" name="title" placeholder="Title" maxlength="30" required>
      </div>
      <div class="form-group">
        <label>Content</label>
        <textarea id="pagedownMe" name="content" class="form-control" rows="20" placeholder="Content" required></textarea>
      </div>
      <button class="btn btn-default submit_button" type="submit">
        <i class="fa fa-check fa-lg"></i> Submit
      </button>
    </form>
  </div><!--content_section-->
</div><!--container-->

<script>
$(function() {
    //navbar change color
    $("a#link_board").attr("href", "#");
    $("a#link_board").addClass("menu-selected");
    //write editor
    $("textarea#pagedownMe").pagedownBootstrap();
});
</script>

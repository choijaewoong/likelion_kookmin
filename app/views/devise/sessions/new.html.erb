<div class="container content">
  <div class="content_section">
    <div class="title_box wow fadeInDown">
        <h2>
            Log in
        </h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <% f.label :email %><h4>이메일</h4>
        <%= f.email_field :email, class: "form-control input_area", autofocus: true %>
      </div>

      <div class="field">
        <% f.label :password %><h4>비밀번호</h4>
        <%= f.password_field :password, class: "form-control input_area", autocomplete: "off" %>
      </div>

      <!-- <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%> -->

      <div class="actions">
        <button class="btn btn-default submit_margin" type="submit">
          <i class="fa fa-sign-in fa-lg"></i> Log in
          <!-- <%=f.submit "Log in", class: "btn btn-default"%> -->
        </button>
      </div>
    <% end %>
    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
